<%-include ../partials/header.ejs%>
    <%-include ../partials/main_nav.ejs%>

        <main class="container">
            <div class="row">
              <div class="offset-md-1 col-md-10">
                  <h1><%=title %> </h1>
                    <%if(typeof displayName =='string'&&displayName){%>
                  <a href="/contactList/add" class="btn btn-primary" role="button"><i class="fas fa-plus-circle"></i>Add a Contact</a>
                  <%}%>
                  <br>
                  <table class="table table-bordered table-stripped table-hover">
                      <!--Header Row-->
                      <tr>
                        <%if(typeof displayName =='string'&&displayName){%>
                          <th class="text-center col-2">Customer_Name</th>
                          <th class="text-center col-2">Customer_Number</th>
                          <th class="text-center col-1">Email_ID</th>

                          
                          <th class="text-center col-1"></th>
                          <th class="text-center col-1"></th>
                          <%}else{%>
                          <th class="text-center col-2">Customer_Name</th>
                          <th class="text-center col-2">Customer_Number</th>
                          <th class="text-center col-1">Email_ID</th>

                          <%}%>
                          </tr>
                         <%for(let count = 0; count < contactList.length; count ++){%>
                              <tr>
                                  <%if(typeof displayName =='string'&&displayName){%>
                                  <td class="text-center col-1"><%=contactList[count].Customer_Name%></td>
                                  <td class="text-center col-2"><%=contactList[count].Customer_Number%></td>
                                  <td class="text-center col-1"><%=contactList[count].Email_ID%></td>

                              
                                  <td class="text-center col-1"><a href="/contactList/edit/<%=contactList[count]._id%>" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Edit</a></td>
                                  <td class="text-center col-1"><a href="/contactList/delete/<%=contactList[count]._id%>" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a></td>
                                  <%}else{%>
                                  <td class="text-center col-2"><%=contactList[count].Customer_Name%></td>
                                  <td class="text-center col-2"><%=contactList[count].Customer_Number%></td>
                                  <td class="text-center col-1"><%=contactList[count].Email_ID%></td>

                              
                                  <%}%>  
                                </tr>
                                  <%}%>
                      </table>
                  </div>
              </div>
            </main>


<%-include ../partials/bottom_nav.ejs%>
<%-include ../partials/footer.ejs%>